{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python examples/hooks/web_message_sender.py session-start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${PWD}/examples/hooks/web_message_sender.py session-stop"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python examples/hooks/web_message_sender.py post-tool-use {{tool_name}}"
          }
        ]
      }
    ]
  }
}