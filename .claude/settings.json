{
  "permissions": {
    "allow": [
      "Read(//Users/flink/**)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${PWD}/examples/hooks/smart_session_detector.py session-start"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${PWD}/examples/hooks/smart_session_detector.py post-tool-use {{tool_name}}"
          }
        ]
      }
    ]
  }
}